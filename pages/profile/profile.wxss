/* pages/profile/profile.wxss */
.login{
    width: 100%;
    height: 90px;
    background-color: #ff5777; 
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 20px;
}
.loginbc{
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.user-img-image{
    width:60px;
    height: 60px;
    border-radius: 50%
}
.user-img{
    justify-content: center
}
.register-p{
    font-size: 15px;
}
.register{
    width: 100px;
    margin-left: 10px;
}
.register-img {
    position: relative;
    top: 4px;
    width: 16px;
    height: 16px;
    left: -2px;
}
.register-span{
    font-size: 12px
}
.proright-img {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    
    margin-left: 95px;
     
}



.money{
    display: flex;
    border-bottom: 10px solid #eee;
}
.public-sur{
    flex: 1;
    width: 100px;
    height: 80px;
    font-size: 12px;
    text-align: center;
    border-left: 1px solid #eee;
    justify-content: center;
    flex-direction: column;
    display: flex;
    margin-top:-3px;
}
.surplus{
    border-left: none
}
.public-num{
    font-size: 22px;
    font-weight: 800;
    color:#ff5f3e;
    font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    padding-right: 5px
}



.profile-list-img {
    width: 24px;
    height: 24px;
    position: relative;
    left: 16px;
    top: 8px;
}
.profile-list-span {
    font-size: 12px;
}
.profile-list{
    line-height: 40px;
}
.list-block-one-div{
    height: 40px;
    width: 100%;
    display: flex;
}
.list-block-two-div{
    height: 40px;
    width: 100%;
    display: flex;
}
.list-block-one{
    border-bottom: 10px solid #eee;
}
.pub-text{
    border-bottom: 1px solid #eee;
    margin-left: 22px;
    margin-right: 16px;
    flex: 1
}