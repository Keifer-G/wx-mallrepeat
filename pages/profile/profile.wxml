<!--pages/profile/profile.wxml-->
  <view class="login">
      <view class="loginbc">
          <view class="user-img">
              <image src="{{userInfoImg}}" alt="" class="user-img-image" bindtap="imagechoose"></image>
          </view>
          <view class="register">
              <view class="register-p">VX ID</view>
              <view>
                <image src="../../assets/img/profile/phone.png" alt="" class="register-img" ></image>
                <text class="register-span">183xxxxxx</text>
              </view>
          </view>
          <view class="proright">
              <image src="../../assets/img/common/arrow-left.png" alt="" class="proright-img"></image>
          </view>
      </view>
  </view>


  
    <view class="money">
        <view class="surplus public-sur">
            <view class="public-block"><text class="public-num">0.00</text><text>元</text></view>
            <view>我的余额</view>
        </view>
        <view class="discount public-sur">
            <view class="public-block"><text class="public-num">0</text><text>个</text></view>
            <view>我的优惠</view>
        </view>
        <view class="integral public-sur">
            <view class="public-block"><text class="public-num">0</text><text>分</text></view>
            <view>我的积分</view>
        </view>                
    </view>


  <view class="profile-list">
      <view class="list-block-one">
            <view class="list-block-one-div"><image src="../../assets/img/profile/message.png" alt="" class="profile-list-img"></image><view class="pub-text"><text class="profile-list-span">我的消息</text></view></view>
            <view class="list-block-one-div"><image src="../../assets/img/profile/pointer.png" alt="" class="profile-list-img"></image><view class="pub-text"><text  class="profile-list-span">积分商城</text></view></view>
            <view class="list-block-one-div"><image src="../../assets/img/profile/vip.png" alt="" class="profile-list-img"></image><view class="pub-text"><text  class="profile-list-span">会员卡</text></view></view>
      </view>
      <view class="list-block-two">
            <view class="list-block-two-div"><image src="../../assets/img/profile/cart.png" alt="" class="profile-list-img"></image><view class="pub-text"><text  class="profile-list-span">我的购物车</text></view></view>
            <view class="list-block-two-div"><image src="../../assets/img/profile/download.png" alt="" class="profile-list-img"></image><view class="pub-text"><text  class="profile-list-span">下载购物APP</text></view></view>
      </view>
  </view>